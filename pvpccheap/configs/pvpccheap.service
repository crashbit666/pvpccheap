[Unit]
Description=Script to check PVP price and Activate/Deactivate Switches
After=multi-user.target

[Service]
Type=simple
User=pvpccheap
Group=pvpccheap
Environment="PATH=/opt/pvpccheap/venv/bin"
Restart=on-failure
ExecStart=/opt/pvpccheap/venv/bin/python /opt/pvpccheap/pvpccheap/pvpccheap.py

[Install]
WantedBy=multi-user.target
